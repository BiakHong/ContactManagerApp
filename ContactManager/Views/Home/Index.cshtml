@model List<ContactManager.Models.Contact>
@{
    ViewBag.title = "Contact Manager";
}
<div class="pt-2 pb-2">
    <a asp-controller="Contact" asp-action="Add" class="text-decoration-none">Add Contact</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone</th>
            <th>Email</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <td><a asp-controller="Contact" asp-action="Details" asp-route-id="@contact.ContactId" class="text-decoration-none">@contact.First</a></td>
                <td><a asp-controller="Contact" asp-action="Details" asp-route-id="@contact.ContactId" class="text-decoration-none">@contact.Last</a></td>
                <td>@contact.Phone</td>
                <td>@contact.Email</td>
                <td>@contact.Category.Name</td>

            </tr>
        }
    </tbody>
</table>